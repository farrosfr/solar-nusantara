---
// src/components/Navbar.astro
const navLinks = [
  { href: "/", text: "Beranda" },
  { href: "/tentang", text: "Tentang" },
  { href: "/layanan", text: "Layanan" },
  { href: "/produk", text: "Produk" },
  { href: "/pintar", text: "Pintar" },
  { href: "/kontak", text: "Kontak" },
  { href: "/berita", text: "Berita" },
];
---

<nav class="hidden lg:flex w-full items-center justify-center bg-white/80 backdrop-blur-md h-16 sticky top-0 z-40 shadow-sm">
  <div class="container mx-auto px-4 flex items-center justify-center">
    <ul class="flex items-center gap-6">
      {navLinks.map(link => (
        <li class="relative group w-20">
          <a 
            href={link.href} 
            class="block w-full text-center text-gray-700 font-medium transition-colors duration-300 py-2"
          >
            {link.text}
          </a>
          <span class="absolute -top-4 left-1/2 -translate-x-1/2 h-1 w-0 bg-blue-600 group-hover:w-full transition-all duration-300"></span>
        </li>
      ))}
    </ul>
  </div>
</nav>

<style>
  a[href="${Astro.url.pathname}"] {
    color: #1583c7;
  }
  a[href="${Astro.url.pathname}"] + span {
    width: 100%;
    background-color: #1583c7;
  }
</style>
