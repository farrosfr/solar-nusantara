---
// src/components/ProductCarousel.astro

interface Product {
  title: string;
  description: string;
  url: string;
}

interface Props {
  products: Product[];
}

const { products } = Astro.props;
---

<section class="bg-gray-900 py-16">
  <div class="container mx-auto px-4">
    <div class="flex justify-between items-center mb-12">
      <h2 class="text-3xl font-bold text-white">Produk Kami</h2>
      <p class="text-lg text-gray-400">Yang terbaik yang bisa Anda dapatkan</p>
    </div>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {products.map(product => (
        <div class="bg-gray-800 rounded-lg p-6 flex flex-col">
          <h4 class="text-xl font-bold text-white mb-2">{product.title}</h4>
          <p class="text-gray-400 flex-grow mb-4">{product.description}</p>
          <a href={product.url} class="text-blue-400 hover:text-blue-300 self-start">
            Baca Selengkapnya &rarr;
          </a>
        </div>
      ))}
    </div>
  </div>
</section>
